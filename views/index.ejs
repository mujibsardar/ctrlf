    $searchResults.html("")
    var count = 0
    rawResults.webpages.forEach((result) => {
    var result_uri = result.uri
    $searchResults.append(`<li class="search_result_li">
                                <span class="search_result_name" id='${count}' url="${result.uri}" style="cursor:pointer">${result.name}</span><br>
                                            ${result.snippet}<br>
